{% extends 'base.html.twig' %}

{% block title %}Etape index{% endblock %}

{% block body %}
    <h1>Etape index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Intitule</th>
                <th>Descriptif</th>
                <th>Consigne</th>
                <th>Position</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etape in etapes %}
            <tr>
                <td>{{ etape.id }}</td>
                <td>{{ etape.intitule }}</td>
                <td>{{ etape.descriptif }}</td>
                <td>{{ etape.consigne }}</td>
                <td>{{ etape.position }}</td>
                <td>
                    <a href="{{ path('app_etape_show', {'id': etape.id}) }}">show</a>
                    <a href="{{ path('app_etape_edit', {'id': etape.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_etape_new') }}">Create new</a>
{% endblock %}
